{
  "name": "dash-bootstrap-components",
  "version": "0.9.4",
  "description": "Bootstrap components for Plotly Dash",
  "repository": "github:facultyai/dash-bootstrap-components",
  "main": "lib/dash-bootstrap-components.min.js",
  "scripts": {
    "build-dist": "npm run clean:py && webpack --config=webpack/config.dist.js && npm run build:py",
    "clean": "npm run clean:py && npm run clean:lib",
    "clean:py": "mkdirp dash_bootstrap_components/_components && rimraf dash_bootstrap_components/_components",
    "clean:lib": "mkdirp lib && rimraf lib/",
    "demo": "webpack-dev-server --hot --inline --port=8888 --config=webpack/config.demo.js",
    "build:lib": "webpack --config=webpack/config.lib.js",
    "build:py": "mkdirp dash_bootstrap_components/_components && dash-generate-components ./src/components dash_bootstrap_components --r-prefix 'dbc'",
    "build:css": "grunt build",
    "grunt": "grunt",
    "format": "prettier src/**/*.js --write",
    "lint": "prettier src/**/*.js --list-different",
    "prepublish": "NODE_ENV=production npm run build-dist && NODE_ENV=production npm run build:lib",
    "test": "jest",
    "test:demo": "webpack --content-base=demo --config=webpack/config.demo.js",
    "test:watch": "jest --watch"
  },
  "files": [
    "lib",
    "src",
    "LICENSE.txt",
    "README.md"
  ],
  "author": "Faculty<faculty@ai.com>",
  "bugs": {
    "url": "https://github.com/facultyai/dash-bootstrap-components/issues"
  },
  "homepage": "https://github.com/facultyai/dash-bootstrap-components",
  "license": "Apache-2.0",
  "devDependencies": {
    "@babel/core": "^7.8.7",
    "@babel/plugin-proposal-object-rest-spread": "^7.8.3",
    "@babel/preset-env": "^7.8.7",
    "@babel/preset-react": "^7.8.3",
    "babel-jest": "^24.9.0",
    "babel-loader": "^8.1.0",
    "bootstrap": "^4.4.1",
    "bootswatch": "^4.4.1",
    "copyfiles": "^2.2.0",
    "css-loader": "^1.0.1",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "grunt": "^1.1.0",
    "grunt-contrib-clean": "^2.0.0",
    "grunt-contrib-concat": "^1.0.1",
    "grunt-contrib-copy": "^1.0.0",
    "grunt-sass": "^3.1.0",
    "jest": "^24.9.0",
    "jest-environment-jsdom-global": "^1.2.1",
    "jest-extended": "^0.11.5",
    "mkdirp": "^0.5.4",
    "move-cli": "^1.2.1",
    "node-sass": "^4.13.1",
    "prettier": "^1.19.1",
    "react-docgen": "^2.21.0",
    "rimraf": "^2.7.1",
    "style-loader": "^0.23.1",
    "webpack": "^4.42.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "dependencies": {
    "classnames": "^2.2.6",
    "fast-isnumeric": "^1.1.3",
    "is-absolute-url": "^2.1.0",
    "moment": "^2.24.0",
    "prop-types": "^15.7.2",
    "ramda": "^0.25.0",
    "react": "^16.13.1",
    "react-addons-shallow-compare": "^15.6.0",
    "react-dom": "^16.13.0",
    "reactstrap": "^8.4.1"
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "babel-jest"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/src/setupTests.js"
    ],
    "testEnvironment": "jest-environment-jsdom-global"
  }
}
